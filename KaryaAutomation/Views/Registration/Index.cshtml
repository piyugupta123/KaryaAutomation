<div class="breadcrumbs">
    <div class="page-header d-flex align-items-center" style="background-image: url('assets/img/page-header.jpg');">
        <div class="container position-relative">
            <div class="row d-flex justify-content-center">
                <div class="col-lg-6 text-center">
                    <h2 style="color:white;">Registration Form</h2>

                </div>
            </div>
        </div>
    </div>
    <nav>
            <div class="container">
                <ol>
                    <li><a href="index.html">Home</a></li>
                    <li>Registration</li>
                </ol>
            </div>
        </nav>
</div>
<div class="row gy-4 mt-4">
    <div class="col-lg-2">
    </div>

    <div class="col-lg-8">

        <div class="row">
            <div class="col-md-6 form-group">
             
                <input type="text" name="name" class="form-control" id="txtName" placeholder="Your Name" required>
            </div>

            <div class="col-md-6 form-group mt-3 mt-md-0">
                <input typearea="text" class="form-control" name="Address" id="txtAddress" placeholder="Address" required>
            </div>
        </div><br />
        <div class="row">
            <div class="col-md-6 form-group mt-3 mt-md-0">
                <input type="text" class="form-control" name="Gender" id="txtGender" placeholder="Gender" required>
            </div>

            <div class="col-md-6 form-group mt-3 mt-md-0">
                <input type="text" class="form-control" name="City" id="ddlCity" placeholder="City" required>
            </div>
        </div><br />
        <div class="row">
            <div class="col-md-6 form-group mt-3 mt-md-0">
                <input type="text" class="form-control" name="MobileNumber" id="txtMobileNumber" placeholder="Mobile Number" required>
            </div>

            <div class="col-md-6 form-group mt-3 mt-md-0">
                <input type="text" class="form-control" name="Pincode" id="txtPincode" placeholder="Pinncode" required>
            </div>
        </div><br />
        <div class="row">
            <div class="col-md-6 form-group mt-3 mt-md-0">
                <input type="text" class="form-control" name="State" id="txtState" placeholder="State" required>
            </div>

            <div class="col-md-6 form-group mt-3 mt-md-0">
                <input type="text" class="form-control" name="Password" id="txtPassword" placeholder="Password" required>
            </div>
        </div><br />
        <div class="row">
            <div class="col-md-6 form-group mt-3 mt-md-0">
                <input type="email" class="form-control" name="Email" id="txtEmail" placeholder="Your Email" required>
            </div>
            <div class="col-md-6 form-group mt-3 mt-md-0">
                <input type="text" class="form-control" name="ConfirmPassword" id="txtConfirmPassword" placeholder="confirm Password" required>
            </div>
        </div><br />


        <div class="text-center "><button type="submit"  onclick="SaveRegistration()">Submit</button></div>

        <div class="col-lg-2">
        </div>
    </div>
</div>
